li {
    cursor: pointer;
    margin-bottom: 8px;
    padding: 8px;
    border: 1px solid #ddd;
    background-color: #f9f9f9;
    border-radius: 4px;
    transition: background-color 0.3s;
}

li.completed {
    text-decoration: line-through;
    background-color: #d3ffd3;
}

.delete {
    background-color: #ff6464;
    color: #fff;
    border: none;
    padding: 4px 8px;
    margin-left: 8px;
    border-radius: 4px;
    cursor: pointer;
    font-size: 14px;
}

$(document).ready(function() {
    // Evento de submissão do formulário
    $("#taskForm").submit(function(event) {
        event.preventDefault(); // Evita o comportamento padrão de recarregar a página

        // Obtém o valor do campo de entrada
        var taskName = $("#taskInput").val();

        // Verifica se o campo não está vazio
        if (taskName.trim() !== "") {
            // Adiciona um novo item à lista com um botão de exclusão
            $("#taskList").append("<li>" + taskName + " <button class='delete'>Excluir</button></li>");

            // Limpa o campo de entrada
            $("#taskInput").val("");
        }
    });

    // Evento de clique nos itens da lista
    $("#taskList").on("click", "li", function() {
        // Adiciona ou remove a classe "completed" para aplicar ou remover o efeito de linha
        $(this).toggleClass("completed");
    });

    // Evento de clique nos botões de exclusão
    $("#taskList").on("click", ".delete", function(event) {
        event.stopPropagation(); // Impede que o evento de clique no li seja acionado
        $(this).parent().remove(); // Remove o li pai do botão clicado
    });
});
