    <form id="taskForm" class="form">
        <input type="text" id="taskInput" placeholder="Adicione uma tarefa" class="task-input">
        <button type="submit" class="add-button">Adicionar</button>
    </form>
    <ul id="taskList" class="task-list"></ul>
